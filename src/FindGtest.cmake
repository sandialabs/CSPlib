# Check Kokkos installation
FILE(GLOB_RECURSE GTEST_FOUND_CMAKE_FILE "${GTEST_INSTALL_PATH}/GTestConfig.cmake")
MESSAGE(STATUS "Gtest install path : ${GTEST_INSTALL_PATH}")
MESSAGE(STATUS "Gtest found cmake config : ${GTEST_FOUND_CMAKE_FILE}")
IF (GTEST_FOUND_CMAKE_FILE)
  INCLUDE(${GTEST_FOUND_CMAKE_FILE})
  SET(GTEST_FOUND ON)
ELSE()
  MESSAGE(FATAL_ERROR "-- Gtest is not found at ${GTEST_INSTALL_PATH}")
ENDIF()